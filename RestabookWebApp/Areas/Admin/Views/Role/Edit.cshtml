@model IdentityRole

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title text-center">Edit Role</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Role Name</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter role name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-3">
                    <button class="btn btn-warning me-3">Edit</button>
                    <a href="/admin/role" class="btn btn-secondary ms-3">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
