@model Product

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhotoPath" class="form-label">Image</label>
        <input type="file" name="file" accept="image/*" class="form-control" asp-for="PhotoPath">
        <span class="text-danger" asp-validation-for="PhotoPath"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Description">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input type="number" class="form-control" asp-for="Price">
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DiscountPrice"  class="form-label">Discount Price</label>
        <input type="number" class="form-control" asp-for="DiscountPrice">
        <span class="text-danger" asp-validation-for="DiscountPrice"></span>
    </div>
    
