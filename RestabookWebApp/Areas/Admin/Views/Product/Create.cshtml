    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Select a category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
            <option value="" selected disabled>Select a category</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Expires" class="form-label"></label>
        <input type="date" class="form-control" asp-for="Expires" min="@DateTime.Now.ToString("yyyy-MM-dd")">
        <span class="text-danger" asp-validation-for="Expires"></span>
    </div>
    <div class="text-center m-4">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
