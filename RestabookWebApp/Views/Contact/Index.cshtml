@model RestabookWebApp.Models.Contact

<!-- content  -->
<div class="content">

    <section class="no-padding dark-bg hidden-section">
        <div class="map-container" style="filter: brightness(50%);">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3270.9523139271882!2d49.85372012911153!3d40.377008913399486!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d0d71e9898b%3A0x2a9847f372425d29!2sIT%20Brains%20Academy-%20IT%20v%C9%99%20Proqramla%C5%9Fd%C4%B1rma%20kursu!5e1!3m2!1sen!2saz!4v1740079180434!5m2!1sen!2saz"
                width="100%" height="650" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>

        <!-- map-view-wrap -->
        <div class="map-view-wrap">
            <div class="container">
                <div class="map-view-wrap_item">
                    <div class="contact-details">
                        <h4>Contacts Details</h4>
                        <ul>
                            <li><span><i class="fal fa-map-marked-alt"></i> Address :</span> <a href="#">Baku, IT
                                    Brains</a></li>
                            <li><span><i class="fal fa-phone-rotary"></i> Phone :</span> <a href="tel:+7(123)987654">+7(123)987654</a>
                            </li>
                            <li><span><i class="fal fa-mailbox"></i> Mail :</span> <a href="mailto:yourmail@domain.com">yourmail@domain.com</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- map-view-wrap end -->
        <div class="brush-dec"></div>
    </section>

    <!-- Contact Section -->
    <section class="hidden-section big-padding con-sec" data-scrollax-parent="true" id="sec3">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="section-title text-align_left">
                        <h2>Get in touch</h2>
                        <div class="dots-separator fl-wrap"><span></span></div>
                    </div>
                    <div class="text-block">
                        <p>Please feel free to reach out if you have any questions or concerns. We are here to assist
                            you and will respond as quickly as possible. Your feedback is always welcome!
                        </p>
                    </div>
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success"
                             style="color: white; background-color: #28a745; border-color: #28a745;">
                            @ViewBag.SuccessMessage
                        </div>
                    }
                    <div class="contactform-wrap">
                        <div id="message"></div>

                        <!-- Contact Form -->
                        <form class="custom-form" method="post" asp-action="Contact">
                            <fieldset>
                                <div id="message2"></div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <input type="text" name="Name" id="name2"
                                               placeholder="Your Name *" asp-for="Name"/>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="email" name="Email" id="email2"
                                               placeholder="Email Address *" asp-for="Email"/>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" name="Phone" id="phone2"
                                               placeholder="Phone *" asp-for="Phone"/>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="fl-wrap">
                                            <select name="Subject" id="subject2" asp-for="Subject"
                                                    class="chosen-select no-search-select">
                                                <option data-display="Subject">Any</option>
                                                <option value="Upcoming Events">Upcoming Events</option>
                                                <option value="Book table">Book table</option>
                                                <option value="Banquet">Banquet</option>
                                                <option value="Other">Other</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <textarea name="Message" id="comments2" cols="40" rows="3" placeholder="Your Message:"
                                          asp-for="Message"></textarea>

                                <div class="clearfix"></div>
                                <button class="btn float-btn flat-btn color-bg" id="submit_cnt" type="submit">Send
                                    Message <i class="fal fa-long-arrow-right"></i></button>
                            </fieldset>
                        </form>
                    </div>
                    <div class="section-dec sec-dec_top"></div>
                </div>

                <div class="col-md-5">
                    <div class="column-text_inside fl-wrap dark-bg">
                        <div class="column-text">
                            <div class="section-title">
                                <h4>Call For Reservations</h4>
                                <h2>Opening Hours</h2>
                                <div class="dots-separator fl-wrap"><span></span></div>
                            </div>
                            <div class="work-time fl-wrap">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h3>Sunday to Tuesday</h3>
                                        <div class="hours">
                                            09:00<br>
                                            22:00
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <h3>Friday to Saturday</h3>
                                        <div class="hours">
                                            11:00<br>
                                            19:00
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="bold-separator"><span></span></div>
                            <div class="big-number">
                                <a href="tel:+7111123456789">+7(111)123456789</a>
                            </div>
                        </div>
                        <div class="illustration_bg">
                            <div class="bg" data-bg="images/bg/dec/6.png"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section-bg">
            <div class="bg" data-bg="images/bg/dec/section-bg.png"></div>
        </div>
    </section>

    <!-- End of Contact Section -->
    <div class="brush-dec2 brush-dec_bottom"></div>
</div>
<!-- content end  -->
 
