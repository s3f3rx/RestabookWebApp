@model RestabookWebApp.DTOs.ResetPasswordDTO

@{
    Layout = "_AuthLayout";
    if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
}
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Reset Password!</h1>
                            </div>
                            <form class="user" asp-action="ResetPassword" method="post">
                                <input type="hidden" asp-for="Token"/>
                                <input type="hidden" asp-for="Email"/>
                                <div class="form-group">
                                    <input type="password" asp-for="NewPassword" class="form-control form-control-user"
                                           placeholder="Enter New Password...">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="password" asp-for="ConfirmPassword"
                                           class="form-control form-control-user"
                                           placeholder="Confirm New Password...">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-success btn-user btn-block">
                                    Reset Password
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
