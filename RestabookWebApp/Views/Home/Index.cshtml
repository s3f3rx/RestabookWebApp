<script>
    // data-bgtab özelliği olan tüm bağlantıları seç
    const links = document.querySelectorAll('.tabs-menu a[data-bgtab]');

    links.forEach(link => {
        link.addEventListener('click', function (e) {
            e.preventDefault(); // Varsayılan bağlantı davranışını engelle

            // Tıklanan öğenin data-bgtab özelliğinden resim URL'sini al
            const bgImageUrl = this.getAttribute('data-bgtab');

            // Arka plan resmini değiştir
            const imgElement = document.getElementById('bgImage');
            imgElement.src = bgImageUrl;
        });
    });

</script>