                                @foreach (var category in Model.Categories)
                                {
                                    <div class="tab">
                                        <div id="tab-@category.Id"
                                             class="tab-content @(category == Model.Categories.First() ? "first-tab" : "")">
                                            @foreach (var product in category.Products)
